@page
@model SujithAshok_ToDoApp.Pages.TasksModel
@{
    ViewData["Title"] = "Tasks";
}

<h1>Tasks</h1>

<p>
   
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                User Email
            </th>
            <th>
                Title
            </th>
            <th>
                Done
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TaskView)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Done)*@
                    <form method="post">
                        <input class="form-check-input" asp-for="TaskItem.Done" />
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </form>
                </td>
               
            </tr>
        }
    </tbody>
</table>