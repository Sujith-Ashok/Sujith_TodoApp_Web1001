@page
@model SujithAshok_ToDoApp.Pages.Todo.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Item.itemID" />
            <div class="form-group">
                <label asp-for="Item.UserEmail" class="control-label"></label>
                <input asp-for="Item.UserEmail" class="form-control" />
                <span asp-validation-for="Item.UserEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Title" class="control-label"></label>
                <input asp-for="Item.Title" class="form-control" />
                <span asp-validation-for="Item.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Description" class="control-label"></label>
                <input asp-for="Item.Description" class="form-control" />
                <span asp-validation-for="Item.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.AddedDate" class="control-label"></label>
                <input asp-for="Item.AddedDate" class="form-control" />
                <span asp-validation-for="Item.AddedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.DueDate" class="control-label"></label>
                <input asp-for="Item.DueDate" class="form-control" />
                <span asp-validation-for="Item.DueDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Item.Done" /> @Html.DisplayNameFor(model => model.Item.Done)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Item.DoneDate" class="control-label"></label>
                <input asp-for="Item.DoneDate" class="form-control" />
                <span asp-validation-for="Item.DoneDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
